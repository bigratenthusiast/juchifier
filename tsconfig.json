{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "outDir": "dist/",
    "rootDir": "src",
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/scripts/"
  ]
}
